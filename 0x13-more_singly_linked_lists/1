#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "lists.h"

/**
 * struct listint_s - singly linked list
 * @n: integer
 * @next: points to the next node
 *
 * return: number of nodes
 *
 */

size_t listint_len(const listint_t *h)
{
	size_t n = 0;
	
	while (h)
	{
		n++;
		h = h->next;
	}
	return (n);
}
